<header class="navbar navbar-fixed-top navbar-inverse", id="header">
  <div class="container">
    <%= link_to "TennisCourt Reservation App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "トップへ", root_path %></li>
            <li><%= link_to "すべての利用者", users_path %></li>
            <li><%= link_to "すべてのテニスコート", courts_path %></li>
          <% else %>
            <li id="header_menu"><%= link_to "トップへ", root_path %></li>
          <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% unless current_user.admin? %>
                  <li><%= link_to "テニスコート予約", court_path(Court.find(1)) %></li>
                  <li><%= link_to "プロフィール修正", edit_user_registration_path %></li>
                <% end %>
                <li class="divider"></li>
                <li>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %> 
                </li>
              </ul>
            </li>
        <% else %>
          <li><%= link_to "トップへ", root_path %></li>
          <li><%= link_to "テニスコート予約状況", "#" %></li>          
          <li><%= link_to "ログイン", user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>