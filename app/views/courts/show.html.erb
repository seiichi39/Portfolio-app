              <% end %>
            <% end %>
           </td>
           <td>
            <% if day.part2.present? && day.part2 != 99999 %>
              <%= "予約済" %>
            <% end %>
           </td>
           <!-- 13:00〜15:00の時間帯の内容 -->
           <td>
            <% if ((Date.current + 14) > day.reservation_date) && (day.reservation_date > Date.current) %>
              <% if day.part3.nil? || day.part3 == 99999 %>
