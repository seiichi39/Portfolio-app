              <% end %>
            <% end %>
           </td>
           <td>
            <% if day.part3.present? && day.part3 != 99999 %>
              <%= "予約済" %>
            <% end %>
           </td>
           <!-- 15:00〜17:00の時間帯の内容 -->
           <td>
            <% if ((Date.current + 14) > day.reservation_date) && (day.reservation_date > Date.current) %>
              <% if day.part4.nil? || day.part4 == 99999 %>
