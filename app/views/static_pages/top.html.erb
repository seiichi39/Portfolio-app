<div class="row">
  <div class="col-md-12">
    <div class="center jumbotron" id="top-main">
      <h1 id="top-main-title">テニスコート予約アプリ</h1>
      <div style="margin-top: 10px;">
        <% unless logged_in? %>
          <%= link_to "ログイン", user_session_path, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "ログイン状態です", user_session_path, disabled: true, class: "btn btn-primary" %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
        <% end %>
      </div>
      <p>
        アカウント作成は<%= link_to "こちら", '#' %>から
      </p>
    </div>
  </div>
</div>
